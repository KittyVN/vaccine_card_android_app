<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cvRecommended"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#FFFFFF"
        app:cardBackgroundColor="@color/colorTravelCard"
        android:layout_margin="15dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvRecommendedVaccines"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="0dp"
                android:text="Text"
                app:layout_constraintBottom_toTopOf="@+id/tvVaccineDescription"
                app:layout_constraintLeft_toRightOf="@+id/tvTrafficLightRecommended"
                app:layout_constraintStart_toEndOf="@+id/tvTrafficLightRecommended"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvVaccineDescription"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/tvRecommendedVaccines"
                app:layout_constraintStart_toEndOf="@id/tvTrafficLightRecommended"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Text"
                app:layout_constraintTop_toBottomOf="@+id/tvRecommendedVaccines"
                 />

            <TextView
                android:id="@+id/tvTrafficLightRecommended"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/colorRedTraffic"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>